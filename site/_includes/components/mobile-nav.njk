<nav id="mobile-nav" class="mobile-nav">
    <ul>
        {% for item in navigation.main %}
            <li class="item">
                <a href="{{ item.url | safe }}" class="link {% if page.url == item.url %}active{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>
            </li>
        {% endfor %}
    </ul>
</nav>

<button id="mobile-nav-toggle" class="btn mobile-nav-toggle" aria-label="Mobile menu toggle" aria-expanded="false" aria-controls="mobile-nav">

    <span class="mobile-nav-label mobile-nav-label-open">Menu</span>
    <span class="mobile-nav-label mobile-nav-label-close">Fermer</span>

    <span class="mobile-nav-icon" aria-hidden="true">
        <span class="mobile-nav-icon-line"></span>
        <span class="mobile-nav-icon-line"></span>
        <span class="mobile-nav-icon-line"></span>
    </span>

</button>
