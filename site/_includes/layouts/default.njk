<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {% if meta_title %}{{ meta_title }}
      {% else %}{{ title }}
      {% endif %} | {{ site.name }}</title>
    <meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
    <meta name="robots" content="noindex,nofollow"/>

    <link rel="stylesheet" href="/assets/css/main.css">

    {# include fonts #}
    {% include "components/google-fonts.njk" %}

    {# include social meta tags #}
    {% include "components/social-meta.njk" %}

    {# lastly include favicon, fonts, etc #}
    <link rel="icon" type="image/png" href="{{ site.images.favicon }}">

    {# canonical #}
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  </head>

  <body {% if body_class %} id="{{ body_class }}"{% endif %}>

    <a class="sr-only" href="#main">Skip to content</a>

    <div id="wrapper" class="wrapper">

      {# include header #}
      {% include "components/header.njk" %}

      {# include content #}
      {{ content | safe }}

      {# include footer #}
      {% include "components/footer.njk" %}

    </div>

    {# include scripts #}
    <script src="/assets/js/van11y-accessible-carrousel-aria.js" defer></script>
    <script src="/assets/js/main.js" defer></script>
  </body>
</html>
